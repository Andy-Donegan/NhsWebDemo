                    <li class="list-group-item">@Html.DisplayNameFor(model => model.weeklyCancelled) : @Html.DisplayFor(model => model.weeklyCancelled)</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.weeklyNonCompliance) : @Html.DisplayFor(model => model.weeklyNonCompliance)</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.weeklyLate) : @Html.DisplayFor(model => model.weeklyLate)</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.weeklySafetyAlerts) : @Html.DisplayFor(model => model.weeklySafetyAlerts)</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.weeklyMissingData) : @Html.DisplayFor(model => model.weeklyMissingData)</li>
                </ul>     
            </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Do I need</a>
        </div>
    </div>
</div>
<!--Monthly-->
