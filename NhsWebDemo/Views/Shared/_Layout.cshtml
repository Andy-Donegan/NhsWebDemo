     <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" asp-area="" asp-controller="Home" asp-action="Index">Nhs Web Demo</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                    <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#!">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <!--Home Section-->
                            <div class="sb-sidenav-menu-heading">home</div>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Index
                            </a>
                            <!--Call Center Section-->
                            <div class="sb-sidenav-menu-heading">Call Center</div>
                            <a class="nav-link" asp-area="" asp-controller="CallCenter" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Index
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="CallCenter" asp-action="Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                            <!--NHS Section-->
                            <div class="sb-sidenav-menu-heading">NHS</div>
                            <a class="nav-link" asp-area="" asp-controller="NHS" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Index
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="NHS" asp-action="Local">
                                <div class="sb-nav-link-icon"><i class="fas fa-street-view"></i></div>
                                Local
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="NHS" asp-action="Regional">
                                <div class="sb-nav-link-icon"><i class="fas fa-map-marked-alt"></i></div>
                                Regional
                            </a>
                            <a class="nav-link" asp-area="" asp-controller="Nhs" asp-action="National">
                                <div class="sb-nav-link-icon"><i class="fas fa-flag"></i></div>
                                National
                            </a>
                           <!--Next Section-->
                            <div class="sb-sidenav-menu-heading">Mobile App</div>
                            <a class="nav-link" asp-area="" asp-controller="MobileApp" asp-action="About">
                                <div class="sb-nav-link-icon"><i class="fas fa-mobile-alt"></i></div>
                                About
